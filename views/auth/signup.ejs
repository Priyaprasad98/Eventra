<%- include('../partials/head') %>
<body class="min-h-screen">

  <!-- Navbar -->
  <%- include('../partials/nav') %>

  <!-- Main Section with Background -->
  <main class="relative flex justify-center items-center min-h-screen px-4 sm:px-6 lg:px-8
               bg-cover bg-center"
        style="background-image: url('final.jpg');">

    <!-- Dark overlay for subtle contrast -->
    <div class="absolute inset-0 bg-black/20 z-0"></div>

    <!-- Signup Card -->
    <div id="formBox"
         class="relative z-10 w-full max-w-lg bg-white rounded-2xl shadow-2xl p-10
                opacity-0 translate-y-5 transition-all duration-700 ease-out mt-22">

      <!-- Title -->
      <div class="mb-6 text-center">
        <h1 class="text-3xl font-bold text-gray-900">Create your account</h1>
      </div>
      
      <%- include('../partials/error') %>

      <form action="/signup" method="POST" class="space-y-4">

        <!-- First + Last Name -->
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
            <input type="text" name="firstName" id="firstName" value="<%=oldInput.firstName || ''%>" required
                   class="mt-1 block w-full px-3 py-2 border border-purple-900 rounded-md shadow-sm placeholder-grey-400
                          focus:outline-none focus:border-purple-950 focus:ring-1 focus:ring-purple-700">
          </div>

          <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
            <input type="text" name="lastName" id="lastName" value="<%=oldInput.lastName || ''%>"
                   class="mt-1 block w-full px-3 py-2 border border-purple-900 rounded-md shadow-sm placeholder-grey-400
                          focus:outline-none focus:border-purple-950 focus:ring-1 focus:ring-purple-700">
          </div>
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" name="email" id="email" placeholder="you@example.com" value="<%=oldInput.email || ''%>" required
                 class="mt-1 block w-full px-3 py-2 border border-purple-900 rounded-md shadow-sm placeholder-grey-400
                          focus:outline-none focus:border-purple-950 focus:ring-1 focus:ring-purple-700">
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" name="password" id="password" required
                 class="mt-1 block w-full px-3 py-2 border border-purple-900 rounded-md shadow-sm placeholder-grey-400
                          focus:outline-none focus:border-purple-950 focus:ring-1 focus:ring-purple-700">
        </div>

        <!-- Confirm Password -->
        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
          <input type="password" name="confirmPassword" id="confirmPassword" required
                 class="mt-1 block w-full px-3 py-2 border border-purple-900 rounded-md shadow-sm placeholder-grey-400
                          focus:outline-none focus:border-purple-950 focus:ring-1 focus:ring-purple-700">
        </div>

        <!-- User Type -->
        <div class="flex space-x-6">
          <label class="inline-flex items-center">
            <input type="radio" name="userType" value="Student" class="h-4 w-4 cursor-pointer" 
            <% if (oldInput.userType === 'Student') { %> checked <% } %> > 
            <span class="ml-2 text-sm text-gray-700">Student
             </span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" name="userType" value="Admin" class="h-4 w-4 cursor-pointer" 
             <% if (oldInput.userType === 'Admin') { %> checked <% } %> >
            <span class="ml-2 text-sm text-gray-700">Admin</span>
          </label>
        </div>

        <!-- Terms -->
        <div class="flex items-center">
          <input type="checkbox" name="termsAccepted" id="terms" required class="h-4 w-4 rounded cursor-pointer">
          <label for="terms" class="ml-2 block text-sm text-gray-700">
            I accept the <a href="#" class= "text-purple-900 hover:bg-purple-950 transition-colors">Terms & Conditions</a>
          </label>
        </div>

        <!-- Submit Button -->
        <button type="submit"
                class="w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-md shadow-sm
                       text-sm font-medium text-white bg-purple-900 hover:bg-purple-950
                       focus:outline-none focus:ring-1 focus:ring-purple-600 focus:ring-offset-0 transition-transform duration-200 hover:scale-105">
          Create Account
        </button>

        <p class="text-center text-sm text-gray-600 mt-2">
          Already have an account? 
          <a href="/login" class="font-medium text-purple-900 hover:text-purple-950 transition-colors">
            Login
          </a>
        </p>

      </form>
    </div>
  </main>

  <!-- Smooth Slide-Up Animation -->
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      const formBox = document.getElementById("formBox");
      requestAnimationFrame(() => {
        formBox.classList.remove("opacity-0", "translate-y-5");
        formBox.classList.add("opacity-100", "translate-y-0");
      });
    });
  </script>

</body>
</html>
